<html>

<head>
    <title>Accountants</title>
    <link href="../CSS/ResetStyle.css" rel="stylesheet">
    <link href="../CSS/Home.css" rel="stylesheet">
    <link href="../CSS/AdminCSS/ViewAccountant.css" rel="stylesheet">
</head>

<body>
    <nav class="nav">
        <a href="/adminhome" class="MainHeading">FeeReport</a>
        <a href="/adminhome" class="Home">Home</a>
        <a href="/addaccountantform" class="Home">Add Accountant</a>
        <a href="/viewacc" class="Home">View Accountant</a>
        <a href="/logout" class="Home">LogOut</a>
    </nav>
    <div class="table">
        <% var i=1;%>
        <h1 class="Accountantheading">View Accountants</h1>
        <table>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Password</th>
                <th>Email</th>
                <th>Address</th>
                <th>Contact</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            <% result.forEach(function(value){%>
            <tr>
                <td>
                    <%=i%>
                </td>
                <td>
                    <%=value.name%>
                </td>
                <td>
                    <%=value.password%>
                </td>
                <td>
                    <%=value.email%>
                </td>
                <td>
                    <%=value.address%>
                </td>
                <td>
                    <%=value.contact%>
                </td>
                <td><a id="<%= value._id%>" href="/editacc/<%= value._id%>" class="editordelete">Edit</a></td>
                <td><a id="<%= value._id%>" href="" onclick="del(this.id);" class="editordelete">Delete</a></td>
            </tr>
            <% i++;});%>
        </table>
        <div id="error"></div>
        <script src="./JS/DelAcc.js"></script>
    </div>
    <footer class="footer">
        <p class="footertext">All Rights Reserved</p>
    </footer>
</body>

</html>